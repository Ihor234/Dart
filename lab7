import 'package:flutter/material.dart';

void main() {
  runApp(const MyApp());
}

class MyApp extends StatelessWidget {
  const MyApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Stack & Positioned Demo',
      home: Scaffold(
        appBar: AppBar(
          title: const Text('Stack & Positioned Example'),
        ),
        body: Center(
          child: Container(
            width: 300,
            height: 300,
            color: Colors.grey[200],
            child: Stack(
              children: [
                // 1️⃣ Фонова коробка
                Container(
                  color: Colors.blue[100],
                ),

                // 2️⃣ Positioned з RichText (a=30px від верхнього краю)
                Positioned(
                  top: 30,
                  left: 20,
                  child: RichText(
                    text: const TextSpan(
                      text: 'Hello, ',
                      style: TextStyle(color: Colors.black, fontSize: 20),
                      children: [
                        TextSpan(
                          text: 'Flutter!',
                          style: TextStyle(
                            color: Colors.blue,
                            fontWeight: FontWeight.bold,
                            fontSize: 24,
                          ),
                        ),
                      ],
                    ),
                  ),
                ),

                // 3️⃣ Інший Positioned (b=40px від верхнього краю)
                Positioned(
                  top: 40,
                  right: 20,
                  child: Container(
                    width: 80,
                    height: 80,
                    color: Colors.redAccent,
                    child: const Center(
                      child: Text(
                        'Box B',
                        style: TextStyle(color: Colors.white),
                      ),
                    ),
                  ),
                ),

                // 4️⃣ Ще один Positioned (c=60px від низу)
                Positioned(
                  bottom: 60,
                  left: 50,
                  child: Container(
                    width: 100,
                    height: 50,
                    color: Colors.green,
                    child: const Center(
                      child: Text(
                        'Box C',
                        style: TextStyle(color: Colors.white),
                      ),
                    ),
                  ),
                ),
              ],
            ),
          ),
        ),
      ),
    );
  }
}
